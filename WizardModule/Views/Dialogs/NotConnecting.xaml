<UserControl
	x:Class="WizardModule.Views.Dialogs.NotConnecting" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:p="clr-namespace:WizardModule.Properties" xmlns:local="clr-namespace:WizardModule.Views.Dialogs"
	Name="root">
	<StackPanel
		Orientation="Vertical"
		Margin="20">
		<TextBlock
			Style="{StaticResource SmallTextMedium}"
			Text="{x:Static p:Resources.NC_IfYou}" />
		<TextBlock
			Style="{StaticResource SmallTextMedium}"
			Text="{x:Static p:Resources.NC_IfYou2}"
			Margin="0,24,0,0" />
		<StackPanel
			Orientation="Horizontal"
			HorizontalAlignment="Center"
			Margin="0,48,0,0">
			<Button
				Content="{x:Static p:Resources.CANCEL}"
				HorizontalAlignment="Center"
				Style="{StaticResource RoundedButton}"
				Margin="0,0,10,0"
				Command="{Binding OnCancel}" />
			<Button
				Content="{x:Static p:Resources.NEXT}"
				HorizontalAlignment="Center"
				Style="{StaticResource RoundedButton}"
				Margin="0,0,10,0"
				Command="{Binding OnNext}" />
		</StackPanel>
	</StackPanel>
</UserControl>
