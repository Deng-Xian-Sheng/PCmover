<UserControl
	x:Class="WizardModule.Views.Compact.AdvancedOptionUpgradeAssistant" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:p="clr-namespace:WizardModule.Properties" xmlns:compact="clr-namespace:WizardModule.Views.Compact">
	<Button
		Background="#FFFFFFFF"
		HorizontalContentAlignment="Left"
		Command="{Binding OnUpgradeAssistant}">
		<StackPanel
			Orientation="Horizontal">
			<Image
				Height="30"
				Margin="8,0"
				Source="{Binding Path=BoxUri}" />
			<TextBlock
				Grid.Row="0"
				Grid.ColumnSpan="2"
				TextWrapping="WrapWithOverflow"
				FontSize="22"
				FontFamily="Segoe UI Light"
				Text="{x:Static p:Resources.AOUA_Header}" />
		</StackPanel>
	</Button>
</UserControl>
